# Environment Configuration Template for Society Management System
# Copy this file to .env and update with your actual values
# DO NOT COMMIT .env FILE TO VERSION CONTROL

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (get from Supabase dashboard)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon key (get from Supabase dashboard → Settings → API)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
VITE_APP_ENV=production

# Application name and version
VITE_APP_NAME=Society Management System
VITE_APP_VERSION=1.2.0

# Base URL for the application (update with your domain)
VITE_APP_BASE_URL=https://your-site-name.netlify.app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Session timeout in milliseconds (2 hours = 7200000)
VITE_SESSION_TIMEOUT=7200000

# Maximum idle time in milliseconds (15 minutes = 900000)
VITE_MAX_IDLE_TIME=900000

# Rate limiting configuration
VITE_RATE_LIMIT_MAX_ATTEMPTS=5
VITE_RATE_LIMIT_WINDOW_MS=900000

# Enable/disable security features (true/false)
VITE_ENABLE_RATE_LIMITING=true
VITE_ENABLE_SESSION_MONITORING=true
VITE_ENABLE_SECURITY_LOGGING=true

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
# Enable PWA features (true/false)
VITE_ENABLE_PWA=true

# Enable service worker (true/false)
VITE_ENABLE_SERVICE_WORKER=true

# Enable push notifications (true/false)
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# PWA update check interval in milliseconds (1 hour = 3600000)
VITE_PWA_UPDATE_CHECK_INTERVAL=3600000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features (true/false)
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Development tools (disable in production)
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_CONSOLE_LOGGING=false

# =============================================================================
# INTEGRATION CONFIGURATION (Optional)
# =============================================================================
# Analytics configuration (if enabled)
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# Error reporting configuration (if enabled)
VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Performance monitoring
VITE_PERFORMANCE_API_ENDPOINT=https://your-monitoring-service.com/api

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Password requirements
VITE_MIN_PASSWORD_LENGTH=12
VITE_REQUIRE_SPECIAL_CHARS=true
VITE_REQUIRE_NUMBERS=true
VITE_REQUIRE_UPPERCASE=true

# Session security
VITE_ENABLE_SESSION_ENCRYPTION=true
VITE_ENABLE_CSRF_PROTECTION=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache settings for service worker
VITE_CACHE_VERSION=1.2.0
VITE_CACHE_MAX_AGE=86400000
VITE_CACHE_STRATEGY=stale-while-revalidate

# =============================================================================
# NETLIFY SPECIFIC CONFIGURATION
# =============================================================================
# Build settings
VITE_BUILD_TARGET=netlify
VITE_DEPLOY_CONTEXT=production

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env
# 2. Update VITE_SUPABASE_URL with your Supabase project URL
# 3. Update VITE_SUPABASE_ANON_KEY with your Supabase anon key
# 4. Update VITE_APP_BASE_URL with your domain
# 5. Configure other settings as needed
# 6. In Netlify, add these variables in Site settings → Environment variables
# 7. Deploy and test your application
#
# SECURITY NOTES:
# - Never commit .env file to version control
# - Use strong, unique admin passwords
# - Enable all security features in production
# - Regularly rotate API keys
# - Monitor access logs for suspicious activity